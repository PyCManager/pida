import os
import sys

import py

bin = py.path.local(__file__).dirpath()
base = bin.dirpath()

try:
    pida = base.join('pida').pyimport()
    externals = base.join('externals')
    if externals.check():
        sys.path.insert(0, str(externals))
except py.error.ENOENT:
    import pida


if __name__ == '__main__':
    from pida.core import application

    os.environ['PIDA_PATH'] = str(base)
    os.environ['PIDA_BASE'] = str(base)
    os.environ['PIDA_BIN'] = str(bin)
    os.environ['PIDA_SITE'] = str(py.path.local(pida.__file__).dirpath())
    application.main()





# vim:set shiftwidth=4 tabstop=4 expandtab textwidth=79:
