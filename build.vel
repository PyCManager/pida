options(
        name 'Pida'
        default 'run'
)
depends(
    run ['build.ext']
    tests ['build.ext']
)
targets(
    build.ext $ python setup.py build_ext -i

    run $ python run-pida.py
    debug $ python run-pida.py -D -s testing

    gen.api_doc $ pydoctor -c tools/pida-pydoctor.cfg

    tests $ nosetests
)

